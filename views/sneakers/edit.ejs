<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= sneaker.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/sneakers/<%=sneaker._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="sneaker[name]" value="<%= sneaker.name %>">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="sneaker[price]" value="<%= sneaker.price %>" min="1.00" step = "1.00">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="sneaker[image]" value="<%= sneaker.image %>">
                </div>
                <div class="form-group">
                  <textarea class="form-control rounded-0" rows="5" type="text" name="sneaker[description]" value="<%= sneaker.description %>"><%= sneaker.description %></textarea>
                </div>
                <!--<div class="form-group">-->
                <!--    <input class="form-control" type="text" name="description" value="<%= sneaker.description %>">-->
                <!--</div>-->
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/sneakers">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

