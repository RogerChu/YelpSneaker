<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= sneaker.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/sneakers/<%= sneaker._id %>/comments" method="POST">
                <div class="form-group">
                  <textarea class="form-control rounded-0" rows="10" type="text" name="comment[text]" placeholder="text"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/sneakers">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

